<% breadcrumb :user_session_new %>

<div class="flex items-center justify-center h-screen bg-background pt-32 pb-12 px-6">
  <div class="flex flex-col w-2/5 p-4 rounded-lg shadow-lg bg-my_white">
    <h2 class="text-lg font-bold my-6 text-center"><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div  class="form-control px-10 flex flex-col items-center w-full">
        <%= f.label :email, class: "label pb-0 self-start w-full" %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "border rounded-lg  w-full h-9" %>
      </div>

      <div  class="form-control px-10 flex flex-col items-center w-full">
        <%= f.label :password, class: "label pb-0 self-start w-full" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "border rounded-lg w-full h-9"  %>
      </div>

      <div  class="form-control mt-4 mb-6 px-10 flex flex-col items-center w-full">
        <%= link_to 'パスワードをお忘れの方はこちら', new_user_password_path, data: { turbo: false }, class: 'text-center underline underline-offset-2 decoration-1 decoration-gray-300' %>
      </div>

      <div  class="form-control my-4 px-10 flex flex-col items-center w-full">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>

      <div class="form-control my-4 flex flex-col items-center">
        <%= f.submit t('.sign_in'), class: "btn btn-sm bg-btn text-white w-36"%>
      </div>
    <% end %>

    <p class="text-center">ー または ー</p>

    <div class="form-control my-4 flex flex-col items-center">
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false } do %>
        <%= image_tag('google_icon_light_sq_SI@2x.png', class: 'w-full h-9') %>
      <% end %>
      <div  class="form-control mt-8 mb-4 px-10 flex flex-col items-center w-full">
        <%= link_to 'ユーザー登録はこちら', new_user_registration_path, data: { turbo: false }, class: 'text-center underline underline-offset-2 decoration-1 decoration-gray-300' %>
      </div>
    </div>
  </div>
</div>
