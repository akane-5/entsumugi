<div class="flex justify-center">
  <div class="flex flex-col items-center bg-base-100 mt-28 p-8 rounded-lg shadow-lg w-2/5">
    <div class="mb-6 text-lg">
      <h2><%= t('.change_your_password') %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-control px-10 flex flex-col items-center w-full">
        <%= f.label :password, class: "label pb-0 self-start w-full" do%>
          <%= t('.new_password') %>
          <% if @minimum_password_length %>
            <span><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></span>
          <% end %>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-2 py-1 h-9 border rounded" %>
      </div>

      <div class="form-control px-10 flex flex-col items-center w-full">
        <%= f.label :password_confirmation, t('.confirm_new_password'), class: "label pb-0 self-start w-full" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-2 py-1 h-9 border rounded" %>
      </div>

      <div class="form-control my-4 flex flex-col items-center">
      <%= f.submit t('.change_my_password'), class: 'bg-navy text-white py-2 px-4 mt-8 rounded w-auto text-center text-sm'%>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>
