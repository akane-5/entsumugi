<div class="flex justify-center h-screen bg-background pt-32 pb-12 px-6">
  <div class="flex items-center flex-col w-2/5 p-4 rounded-lg shadow-lg bg-my_white">
    <h2 class="text-lg font-bold my-6 text-center"><%= t('.reset_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label t('.registration_email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-2 py-1 h-9 border rounded" %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_mail'), class: 'btn btn-sm bg-btn text-white w-auto mt-10'%>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
