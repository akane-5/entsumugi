<div class="flex justify-center">
  <div class="flex flex-col items-center bg-base-100 mt-28 p-8 rounded-lg shadow-lg w-2/5">
    <div class="mb-6 text-lg">
      <h2><%= t('.reset_password') %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label t('.registration_email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-2 py-1 h-9 border rounded" %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_mail'), class: 'bg-navy text-white py-2 px-4 mt-8 rounded w-auto text-center text-sm'%>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
