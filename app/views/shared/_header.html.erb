<header class="bg-header_footer w-full h-16">
  <div class="navbar">
    <div class="flex-1">
      <%= link_to image_tag('logo2.png', class: 'w-32'), '/' %>
    </div>
    <!-- メニュー -->
    <div class="flex-none">
      <ul class="menu menu-horizontal flex items-center">
        <li>
          <details class="relative">
            <summary class="mr-2">メニュー</summary>
            <ul class="bg-my_white px-1 py-2 rounded-md text-sm top-7 right-1 leading-normal w-48 z-50">
              <li><%= link_to '神社を検索', search_shrines_path %></li>
              <li><%= link_to 'みんなの投稿', posts_path %></li>
              <li><%= link_to '新規投稿', new_post_path %></li>
              <hr class="my-2 h-0.5 border-t-0 bg-neutral-100" />
              <li><%= link_to 'マイページ', users_path %></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } %></li>
              <hr class="my-2 h-0.5 border-t-0 bg-neutral-100" />
              <li><%= link_to 'お問い合わせ', 'https://docs.google.com/forms/d/e/1FAIpQLSf76Lf1iJvskWvw8sON5MAETE_BDj1m7UG_idHepwozCU8vzw/viewform?embedded=true', target: '_blank', rel: 'noopener' %></li>
