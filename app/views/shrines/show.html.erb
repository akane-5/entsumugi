<% breadcrumb :shrines_show, @shrine %>

<div class="container mx-auto pt-12 pb-8 ">
  <div class="bg-my_white p-4 w-9/12 h-1/4 rounded-lg mx-auto shadow-md">
    <div class="flex items-center">
      <div class="w-2/5">
        <% if @shrine.photo_reference.present? %>
          <img src="<%= @shrine.formatted_photo_reference %>" alt="<%= @shrine.name %>" class="rounded-lg w-full h-52">
        <% else %>
          <div class="bg-gray-300 text-white p-4 rounded-lg">PHOTO</div>
        <% end %>
      </div>
      <div class="w-3/5 ml-10">
        <div class="text-2xl font-bold mt-2 flex items-center justify-between">
          <h2><%= @shrine.name %></h2>

          <% if user_signed_in? %>
            <div class="mr-10 w-10">
              <%= turbo_frame_tag dom_id(@shrine, :bookmark), class: "ml-4" do %>
                <% if current_user.bookmarked_shrines.exists?(@shrine.id) %>
                  <%= link_to shrine_bookmark_path(@shrine), method: :delete, data: { turbo_method: :delete }, class: "text-red-500" do %>
                    <i class="fa-solid fa-bookmark"></i>
                  <% end %>
                <% else %>
                  <%= link_to shrine_bookmark_path(@shrine), method: :post, data: { turbo_method: :post }, class: "text-gray-500" do %>
                    <i class="fa-regular fa-bookmark"></i>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

        <p class="text-gray-700 mt-6"><%= @shrine.address %></p>
        <p class="text-gray-700 mt-2">
          公式サイト: 
          <% if @shrine.website.present? %>
            <%= link_to @shrine.website, @shrine.website, target: '_blank', rel: 'noopener' %>
          <% else %>
            -
          <% end %>
        </p>
        <div class="flex mt-6">
          <span class="bg-yellow text-black font-bold py-1 px-2 rounded mr-2">金運</span>
          <span class="bg-pink text-black font-bold py-1 px-2 rounded mr-2">恋愛運</span>
          <span class="bg-blue text-black font-bold py-1 px-2 rounded">健康運</span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mx-auto pt-12 pb-8">
  <div class="flex flex-wrap justify-center">
    <% if @no_results %>
      <div class="text-red-500 text-lg">投稿がありません</div>
    <% else %>
      <% @posts.each do |post| %>
        <div class="card w-72 bg-white shadow m-4">
          <figure>
          <%= image_tag post.image, alt: "御朱印の写真", class: "w-full h-auto max-h-60 object-cover" %>
          </figure>
          <div class="card-body p-6">
            <div class="card-title"><%= post.user.name %></div>
            <div><%= post.body %></div>
            <div><%= post.updated_at %></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="mt-8 text-center text-xl">
    <%#= paginate @posts %>
  </div>
</div>